<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="05:00"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <GridLayout
            android:id="@+id/presets_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btn_preset_3"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="48dp"
                android:text="3 min" />

            <Button
                android:id="@+id/btn_preset_5"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="48dp"
                android:text="5 min" />

            <Button
                android:id="@+id/btn_preset_10"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="48dp"
                android:text="10 min" />

            <Button
                android:id="@+id/btn_preset_15"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="48dp"
                android:text="15 min" />

            <Button
                android:id="@+id/btn_preset_25"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="48dp"
                android:text="25 min" />

            <Button
                android:id="@+id/btn_preset_30"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_height="48dp"
                android:text="30 min" />

        </GridLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="START"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_pause"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="PAUZA"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="RESET" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dziennik timerÃ³w"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <ListView
            android:id="@+id/lv_logs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="8dp"
            android:paddingBottom="8dp" />

    </LinearLayout>

</ScrollView>
